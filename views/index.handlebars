<img src = "/assets/img/burger.jpg" alt= "burger" style= "width:304px;height:228px;">

<h1>Eat-Da-Burger, Please!</h1>

<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
      </form>
    {{/unless}}
  {{/each}}
</ol>

<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>


<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">SUBMIT</button>
</form>
<h5>Eat a burger you want to devour, click the submit button.</h5>